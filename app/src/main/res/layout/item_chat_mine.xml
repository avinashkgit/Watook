<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_2dp"
    android:paddingEnd="@dimen/margin_avg"
    android:paddingStart="@dimen/margin_avg"
    android:paddingTop="@dimen/margin_2dp">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_2dp"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_small"
        android:visibility="gone"
        tools:text="TODAY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_date"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginStart="@dimen/margin_huge"
        android:background="@drawable/shape_bg_outgoing_bubble"
        android:elevation="@dimen/margin_1dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingTop="@dimen/margin_10dp">

        <TextView
            android:id="@+id/text_view_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_100"
            android:textSize="@dimen/font_medium"
            tools:text="uyu  gu hfgh " />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/colorTextPrimaryLight"
            android:textSize="@dimen/font_micro"
            tools:text="12:00 AM" />

    </LinearLayout>

