<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_preferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_equalizer_black_24dp"
                android:drawablePadding="@dimen/margin_10dp"
                android:drawableStart="@drawable/ic_equalizer_black_24dp"
                android:focusable="true"
                android:gravity="center|start"
                android:minHeight="?attr/listPreferredItemHeightSmall"
                android:padding="@dimen/margin_16dp"
                android:text="Preferences"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nav_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
                android:drawablePadding="@dimen/margin_10dp"
                android:drawableStart="@drawable/ic_mode_edit_black_24dp"
                android:focusable="true"
                android:gravity="center|start"
                android:minHeight="?attr/listPreferredItemHeightSmall"
                android:padding="@dimen/margin_16dp"
                android:text="Profile"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nav_blocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_block_black_24dp"
                android:drawablePadding="@dimen/margin_10dp"
                android:drawableStart="@drawable/ic_block_black_24dp"
                android:focusable="true"
                android:gravity="center|start"
                android:minHeight="?attr/listPreferredItemHeightSmall"
                android:padding="@dimen/margin_16dp"
                android:text="Blocked"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nav_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_settings_applications_black_24dp"
                android:drawablePadding="@dimen/margin_10dp"
                android:drawableStart="@drawable/ic_settings_applications_black_24dp"
                android:focusable="true"
                android:gravity="center|start"
                android:minHeight="?attr/listPreferredItemHeightSmall"
                android:padding="@dimen/margin_16dp"
                android:text="Settings"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:text="BLUSH"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>